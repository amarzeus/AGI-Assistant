{
  "id": "excel_report_workflow",
  "name": "Excel Report Generation Workflow",
  "description": "Generate automated Excel report with formulas",
  "version": "1.0",
  "created_at": "2025-10-29T00:00:00Z",
  "actions": [
    {
      "step": 1,
      "type": "excel_create",
      "description": "Create new report workbook",
      "visible": true
    },
    {
      "step": 2,
      "type": "excel_write_range",
      "description": "Write report headers",
      "sheet": 1,
      "start_cell": "A1",
      "data": [
        ["Monthly Sales Report"],
        [""],
        ["Product", "Units Sold", "Price", "Total"]
      ]
    },
    {
      "step": 3,
      "type": "excel_write_range",
      "description": "Write sales data",
      "sheet": 1,
      "start_cell": "A4",
      "data": [
        ["Widget A", 150, 29.99, null],
        ["Widget B", 200, 39.99, null],
        ["Widget C", 100, 49.99, null]
      ]
    },
    {
      "step": 4,
      "type": "excel_insert_formula",
      "description": "Calculate total for Widget A",
      "sheet": 1,
      "cell": "D4",
      "formula": "=B4*C4"
    },
    {
      "step": 5,
      "type": "excel_insert_formula",
      "description": "Calculate total for Widget B",
      "sheet": 1,
      "cell": "D5",
      "formula": "=B5*C5"
    },
    {
      "step": 6,
      "type": "excel_insert_formula",
      "description": "Calculate total for Widget C",
      "sheet": 1,
      "cell": "D6",
      "formula": "=B6*C6"
    },
    {
      "step": 7,
      "type": "excel_write_cell",
      "description": "Write Grand Total label",
      "sheet": 1,
      "cell": "C8",
      "value": "Grand Total:"
    },
    {
      "step": 8,
      "type": "excel_insert_formula",
      "description": "Calculate grand total",
      "sheet": 1,
      "cell": "D8",
      "formula": "=SUM(D4:D6)"
    },
    {
      "step": 9,
      "type": "excel_save",
      "description": "Save report",
      "file_path": "C:\\Users\\Public\\Documents\\monthly_sales_report.xlsx"
    },
    {
      "step": 10,
      "type": "excel_close",
      "description": "Close Excel",
      "save": false
    }
  ],
  "metadata": {
    "category": "excel_automation",
    "tags": ["excel", "report", "formulas", "sales"],
    "estimated_duration": 20,
    "requires_excel": true
  }
}
