# AGI Assistant configuration overrides
# Copy this file to `.env` and adjust values to suit your environment.

# Directory used to persist application data (sessions, logs, exports)
DATA_DIR=~/.agi-assistant

# Default logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Screen capture interval in seconds
SCREENSHOT_INTERVAL=3

# Enable audio transcription pipeline (true/false)
AUDIO_ENABLED=true

# Enable the embedded LLM features (true/false)
LLM_ENABLED=true
